<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="categoryViewModel"
            type="org.aston.quizzapp.viewmodel.CategoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.userFragment">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="344dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:text="Choisir votre categorie"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.082" />

        <HorizontalScrollView

            android:id="@+id/horizontalScrollView2"
            android:layout_width="404dp"
            android:layout_height="133dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.404">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="133dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageView12"
                        android:layout_width="111dp"
                        android:layout_height="88dp"
                        app:srcCompat="@drawable/art" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@{categoryViewModel.categoryMutableLiveData.getName()}"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="133dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageView10"
                        android:layout_width="111dp"
                        android:layout_height="88dp"
                        app:srcCompat="@drawable/science" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="133dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageView8"
                        android:layout_width="111dp"
                        android:layout_height="88dp"
                        app:srcCompat="@drawable/music" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="133dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageView7"
                        android:layout_width="111dp"
                        android:layout_height="88dp"
                        app:srcCompat="@drawable/film" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="133dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageView9"
                        android:layout_width="111dp"
                        android:layout_height="88dp"
                        app:srcCompat="@drawable/sport" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="133dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imageView11"
                        android:layout_width="111dp"
                        android:layout_height="88dp"
                        app:srcCompat="@drawable/geo" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView" />

                </LinearLayout>



            </LinearLayout>
        </HorizontalScrollView>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="344dp"
            android:layout_height="41dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Choisir votre niveau"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.368" />

        <LinearLayout

            android:id="@+id/linearLayout"
            android:layout_width="210dp"
            android:layout_height="152dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.656">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/radio_button_1"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radio_button_1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/label_1" />

                <RadioButton
                    android:id="@+id/radio_button_2"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/label_2" />

                <RadioButton
                    android:id="@+id/radio_button_3"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/label_3" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btn_game_page"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_corners"
            android:text="choisir"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.885"
            tools:ignore="MissingPrefix" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>